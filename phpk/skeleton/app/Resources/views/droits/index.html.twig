{% extends 'base.html.twig' %}

{% block body %}
    <h1>Droits list</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Actif</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for droit in droits %}
            <tr>
                <td><a href="{{ path('droits_show', { 'id': droit.id }) }}">{{ droit.id }}</a></td>
                <td>{% if droit.actif %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('droits_show', { 'id': droit.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('droits_edit', { 'id': droit.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('droits_new') }}">Create a new droit</a>
        </li>
    </ul>
{% endblock %}
